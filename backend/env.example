# Environment variables for Sales Agent Backend

# Gemini AI API Key
GEMINI_API_KEY=your_gemini_api_key_here

# Database
DATABASE_URL=sqlite:///./sales_agent.db

# API Configuration
SECRET_KEY=your_secret_key_here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Google Calendar API (optional - uses same credentials as Gmail)
GOOGLE_CALENDAR_CREDENTIALS_PATH=path/to/credentials.json

# HubSpot API (optional)
HUBSPOT_ACCESS_TOKEN=your_hubspot_access_token_here

# Gmail API Configuration (for sending emails)
GMAIL_CLIENT_ID=your_gmail_client_id_here
GMAIL_CLIENT_SECRET=your_gmail_client_secret_here
GMAIL_REFRESH_TOKEN=your_gmail_refresh_token_here

# CORS Origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
